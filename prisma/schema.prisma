generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Tool {
  id           String   @id @default(cuid())
  slug         String   @unique
  title        String
  description  String
  iconName     String
  category     Category @relation(fields: [categoryId], references: [id])
  categoryId   String
  pricing      String
  websiteUrl   String
  affiliateUrl String?
  color        String
  bgGradient   String
  features     String[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  reviews      Review[]
}

model Category {
  id    String @id @default(cuid())
  name  String @unique
  tools Tool[]
}

model Review {
  id         String   @id @default(cuid())
  tool       Tool     @relation(fields: [toolId], references: [id])
  toolId     String
  pros       String[]
  cons       String[]
  experience String   @db.Text
  rating     Float?
  createdAt  DateTime @default(now())
}
