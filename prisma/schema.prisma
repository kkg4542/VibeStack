// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tool {
  id           String   @id @default(cuid())
  slug         String   @unique
  title        String
  description  String
  category     String
  pricing      String
  websiteUrl   String   @map("website_url")
  affiliateUrl String?  @map("affiliate_url")
  features     String[]
  color        String
  bgGradient   String   @map("bg_gradient")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  stackTools   StackTool[]

  @@map("tools")
}

model Stack {
  id              String   @id @default(cuid())
  idField         String   @unique @map("id_field")
  name            String
  description     String?
  longDescription String?  @map("long_description")
  totalPrice      String?  @map("total_price")
  tags            String[]
  idealFor        String[] @map("ideal_for")
  workflow        String[]
  icon            String?
  color           String?
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  stackTools      StackTool[]

  @@map("stacks")
}

model StackTool {
  id        String   @id @default(cuid())
  stackId   String   @map("stack_id")
  toolId    String   @map("tool_id")
  createdAt DateTime @default(now()) @map("created_at")

  stack     Stack    @relation(fields: [stackId], references: [id], onDelete: Cascade)
  tool      Tool     @relation(fields: [toolId], references: [id], onDelete: Cascade)

  @@unique([stackId, toolId])
  @@map("stack_tools")
}

model BlogPost {
  id        String   @id @default(cuid())
  slug      String   @unique
  title     String
  excerpt   String?
  content   String?  @db.Text
  date      String?
  author    String?
  category  String?
  readTime  String?  @map("read_time")
  image     String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("blog_posts")
}
