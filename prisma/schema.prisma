// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tool {
  id           String   @id @default(cuid())
  slug         String   @unique
  title        String
  description  String
  category     String
  pricing      String
  websiteUrl   String   @map("website_url")
  affiliateUrl String?  @map("affiliate_url")
  icon         String?
  features     String[]
  pros         String[]
  cons         String[]
  color        String   @default("text-foreground")
  bgGradient   String   @default("from-transparent to-transparent") @map("bg_gradient")
  tier         String   @default("free") // free, bronze, silver, gold, platinum
  isFeatured   Boolean  @default(false) @map("is_featured")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  stackTools   StackTool[]
  reviews      Review[]
  favorites    Favorite[]
  affiliateClicks AffiliateClick[]

  @@map("tools")
}

model Stack {
  id              String   @id @default(cuid())
  idField         String   @unique @map("id_field")
  name            String
  description     String?
  longDescription String?  @map("long_description")
  totalPrice      String?  @map("total_price")
  tags            String[]
  idealFor        String[] @map("ideal_for")
  workflow        String[]
  icon            String?
  color           String?
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  stackTools      StackTool[]

  @@map("stacks")
}

model StackTool {
  id        String   @id @default(cuid())
  stackId   String   @map("stack_id")
  toolId    String   @map("tool_id")
  createdAt DateTime @default(now()) @map("created_at")

  stack     Stack    @relation(fields: [stackId], references: [id], onDelete: Cascade)
  tool      Tool     @relation(fields: [toolId], references: [id], onDelete: Cascade)

  @@unique([stackId, toolId])
  @@map("stack_tools")
}

model BlogPost {
  id        String   @id @default(cuid())
  slug      String   @unique
  title     String
  excerpt   String?
  content   String?  @db.Text
  date      String?
  author    String?
  category  String?
  readTime  String?  @map("read_time")
  image     String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("blog_posts")
}

// NextAuth Models
model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model User {
  id            String     @id @default(cuid())
  name          String?
  email         String?    @unique
  emailVerified DateTime?  @map("email_verified")
  image         String?
  createdAt     DateTime   @default(now()) @map("created_at")
  updatedAt     DateTime   @updatedAt @map("updated_at")
  
  accounts      Account[]
  sessions      Session[]
  reviews       Review[]
  favorites     Favorite[]

  @@map("users")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Review {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  toolId    String   @map("tool_id")
  rating    Int
  content   String   @db.Text
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  tool Tool @relation(fields: [toolId], references: [id], onDelete: Cascade)

  @@map("reviews")
}

model Favorite {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  toolId    String   @map("tool_id")
  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  tool Tool @relation(fields: [toolId], references: [id], onDelete: Cascade)

  @@unique([userId, toolId])
  @@map("favorites")
}

model AffiliateClick {
  id        String   @id @default(cuid())
  toolId    String   @map("tool_id")
  toolSlug  String   @map("tool_slug")
  toolName  String   @map("tool_name")
  url       String
  userAgent String?  @map("user_agent")
  referrer  String?
  ipAddress String?  @map("ip_address")
  abVariant String?  @map("ab_variant") // A/B test variant
  createdAt DateTime @default(now()) @map("created_at")

  tool Tool @relation(fields: [toolId], references: [id], onDelete: Cascade)

  @@index([toolId, createdAt])
  @@index([createdAt])
  @@map("affiliate_clicks")
}

model EmailCapture {
  id        String   @id @default(cuid())
  email     String
  source    String   @default("exit_intent") // exit_intent, newsletter, tool_page
  toolSlug  String?  @map("tool_slug")
  metadata  String?  // JSON string for additional data
  createdAt DateTime @default(now()) @map("created_at")

  @@unique([email, source])
  @@index([createdAt])
  @@map("email_captures")
}

model Submission {
  id          String   @id @default(cuid())
  toolName    String   @map("tool_name")
  description String
  websiteUrl  String   @map("website_url")
  category    String
  pricing     String
  email       String
  tier        String   @default("free") // free, priority, premium
  status      String   @default("pending") // pending, approved, rejected
  amount      Int      @default(0) // in cents (0 for free, 4900 for priority, 14900 for premium)
  paymentId   String?  @map("payment_id")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@index([status, createdAt])
  @@map("submissions")
}

model WebhookEvent {
  id        String   @id @default(cuid())
  provider  String
  eventId   String   @unique @map("event_id")
  type      String
  status    String   @default("received") // received, processed, failed
  error     String?  @db.Text
  payload   String?  @db.Text
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([provider, createdAt])
  @@map("webhook_events")
}
